const sessions = new Map();

app.post('/api/chat', async (req, res) => {
    try {
        const { message, sessionId } = req.body;
        if (!message || !message.trim()) {
            return res.status(400).json({ error: 'ะกะพะพะฑัะตะฝะธะต ะฝะต ะผะพะถะตั ะฑััั ะฟััััะผ' });
        }

        console.log(`[${new Date().toISOString()}] Session: ${sessionId}, Message: ${message}`);

        let session = sessions.get(sessionId);
        if (!session) {
            const model = genAI.getGenerativeModel({ model: 'gemini-2.5-flash' });
            session = model.startChat({
                history: [],
                generationConfig: { maxOutputTokens: 500 }
            });
            sessions.set(sessionId, session);
        }

        const result = await session.sendMessage(message);
        const botMessage = result.response.text();

        console.log(`[${new Date().toISOString()}] Response: ${botMessage}`);

        res.json({ message: botMessage, sessionId });

